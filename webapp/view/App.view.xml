<mvc:View xmlns="sap.f" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:m="sap.m"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable"
	xmlns:sv="sap.ui.comp.smartvariants" xmlns:smc="sap.ui.comp.smartmicrochart"
	controllerName="smart.controls.demo.controller.App" 
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	height="100%"
	>
	<m:App>
		<DynamicPage fitContent="true">
			<title>
				<DynamicPageTitle>
					<heading>
						<sv:SmartVariantManagement id="__SVM01" persistencyKey="fiori.test.application2.view.S4"
							showShare="true" showExecuteOnSelection="true" entitySet="ZSALESREPORT" />
					</heading>
					<snappedContent>
						<m:Text id="statusText"></m:Text>
					</snappedContent>
				</DynamicPageTitle>
			</title>
			<header>
				<DynamicPageHeader>
					<content>
						<smartFilterBar:SmartFilterBar entitySet="ZSALESREPORT" id="smartFilterBar"
							smartVariant="__SVM01" useToolbar="false" useDateRangeType="true"
							persistencyKey="fiori.test.application2.view.S4.FilterBar" enableBasicSearch="true"
							basicSearchFieldName="ProductCode" initialized=".onSFBinitialized" assignedFiltersChanged=".onAssignedFiltersChanged"
							beforeVariantSave=".onBeforeVariantSave"  afterVariantLoad=".onAfterVariantLoad">
							<smartFilterBar:controlConfiguration>
								<smartFilterBar:ControlConfiguration key="ProductCode" visibleInAdvancedArea="true">
								</smartFilterBar:ControlConfiguration>
								<smartFilterBar:ControlConfiguration key="Criticality" visibleInAdvancedArea="true">
									<smartFilterBar:customControl>
										<m:MultiComboBox id="comboBox" selectionChange=".onCriticalityChange">
											<core:Item key="Critical" text="Critical" />
											<core:Item key="Negative" text="Negative" />
											<core:Item key="Neutral" text="Neutral" />
											<core:Item key="Positive" text="Positive" />
										</m:MultiComboBox>
									</smartFilterBar:customControl>
								</smartFilterBar:ControlConfiguration>
							</smartFilterBar:controlConfiguration>
						</smartFilterBar:SmartFilterBar>
					</content>
				</DynamicPageHeader>
			</header>
			<content>
				<smartTable:SmartTable id="ItemsST" entitySet="ZSALESREPORT" smartFilterId="smartFilterBar"
					tableType="ResponsiveTable" showFullScreenButton="true" header="Sales Report" showRowCount="true"
					beforeExport=".onBeforeExport" smartVariant="__SVM01" enableAutoBinding="true"
					demandPopin="true" persistencyKey="fiori.test.application2.view.S4.FilterBar"
					enableAutoColumnWidth="true" showDetailsButton="true"
					detailsButtonSetting="Medium,Low"
					beforeRebindTable=".onBeforeRebindTable">
					<m:Table growing="true" sticky="ColumnHeaders,HeaderToolbar">
						<m:columns>
							<m:Column width="15rem">
								<m:customData>
									<core:CustomData key="p13nData"
										value='\{"columnKey": "smartMircoChart", "columnIndex": "4"}' />
								</m:customData>
								<m:Label text="Sold vs Produced" />
							</m:Column>
						</m:columns>
						<m:items>
							<m:ColumnListItem>
								<m:cells>
									<smc:SmartHarveyBallMicroChart entitySet="ZSALESREPORT"
										class="sapUiTinyMarginTopBottom" />
								</m:cells>
							</m:ColumnListItem>
						</m:items>
					</m:Table>
				</smartTable:SmartTable>
			</content>
		</DynamicPage>
	</m:App>
</mvc:View>